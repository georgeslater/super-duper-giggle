<div id="players-container">
  <p id="notice"><%= notice %></p>
  <div class="btn-container">
    <%= button_to 'New Player', new_player_path, :class => 'btn btn-info' %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Last Active</th>
        <th>Goalie?</th>
        <th>Avg Rating</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><img src="<%= @player_image_urls[player.id] %>"></img></td>
          <td><%= link_to player.name, player %></td>
          <td><%= player.last_active %></td>
          <td><%= player.is_goalie %></td>
          <td><%= player.avg_player_rating %></td>
          <td><%= link_to 'View', player %></td>
          <td><%= link_to 'Edit', edit_player_path(player) %></td>
          <td><%= link_to 'Delete', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>  
</div>
